<% layout("./layouts/boilerplate") -%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <div class="empty" style="height: 3rem"></div>

      <h3>Create a new listing</h3>

      <form method="POST" action="/listings" enctype="multipart/form-data">
        <!-- Enter Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Enter title here..."
            class="form-control"
            required
          />
        </div>

        <!-- Enter description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            type="text"
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
        </div>

        <!-- Upload Image -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input type="file" name="listing[image]" class="form-control" />
        </div>

        <div class="row">
          <!-- Enter Price -->
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              placeholder="Enter Price here..."
              class="form-control"
              required
            />
          </div>

          <!-- Enter Hostel -->
          <div class="mb-3 col-md-8">
            <label for="Hostel" class="form-label">Hostel</label>
            <input
              type="text"
              name="listing[Hostel]"
              placeholder="Enter Hostel here..."
              class="form-control"
              required
            />
          </div>
        </div>

        <!-- Enter RoomNo -->
        <div class="mb-3">
          <label for="RoomNo" class="form-label">Room Number</label>
          <input
            type="text"
            name="listing[RoomNo]"
            placeholder="Enter RoomNo here..."
            class="form-control"
            required
          />
        </div>
        <br /><br />
        <button class="btn btn-dark add-btn">Add</button>
        <br /><br /><br />
      </form>
    </div>
  </div>
</body>
